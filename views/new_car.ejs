<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.1/css/font-awesome.min.css" rel="stylesheet"
          type="text/css">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
</head>

<body>
<div class="section">
    <% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h4 class="display-4 pi-draggable pi-item">New Car On Gate</h4>
            <hr class="divider"/>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="/cars/new">
                    <div class="form-group">
                        <label class="label label-primary">Car Type:</label>
                        <select name="car_type" class="form-control">
                            <option>Jumbo</option>
                            <option>Trailer</option>
                            <option>Container</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="label label-primary">Car Number:</label>
                        <input type="text" class="form-control" name="car_number">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>
</div>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/js/bootstrap.js"></script>


</body>

</html>