<html xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>P&G FP VPS | Stats Report</title>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet" type="text/css">
</head>
<body>
<% include ../partials/header.ejs %>
<div class="container-fluid text-xs-center mt-5" style="background-image : url('/images/stats.jpg');background-position: center;
    background-repeat: no-repeat; background-size: cover">
    <div class="container text-center">
        <% for(var i = 0; i < info.length; i++){ %>
        <div class="row">
            <div class="col-md-12">
                <h4 class="display-4 text-center"><%= 'Summary Report of ' + info[i].date + ' shift ' + info[i].shift %></h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive text-xs-center">
                    <table class="table table-bordered table-inverse sortable">
                        <thead>
                        <tr class="text-primary text-xs-center" style="cursor: pointer">
                            <th class="text-xs-center">Vehicles
                            </th>
                            <th class="text-xs-center">Jumbo
                            </th>
                            <th class="text-xs-center">Trailer
                            </th>
                            <th class="text-xs-center">Container
                            </th>
                            <th class="text-xs-center">Total
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td class="text-xs-center">Out Of Site</td>
                            <td class="text-xs-center"><%= info[i].jumbo_in_finish %></td>
                            <td class="text-xs-center"><%= info[i].trailer_in_finish %></td>
                            <td class="text-xs-center"><%= info[i].container_in_finish %></td>
                            <td class="text-xs-center"><%= (info[i].jumbo_in_finish + info[i].trailer_in_finish + info[i].container_in_finish) %></td>
                        </tr>
                        <tr>
                            <td class="text-xs-center">Security Check Time (Minutes)</td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_check_time_jumbo %>
                                <br><%= 'Max: ' + info[i].max_check_time_jumbo %>
                            </td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_check_time_trailer %>
                                <br><%= 'Max: ' + info[i].max_check_time_trailer %>
                            </td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_check_time_container %>
                                <br><%= 'Max: ' + info[i].max_check_time_container %>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-xs-center">Parking Time (Minutes)</td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_parking_time_jumbo %>
                                <br><%= 'Max: ' + info[i].max_parking_time_jumbo %>
                            </td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_parking_time_trailer %>
                                <br><%= 'Max: ' + info[i].max_parking_time_trailer %>
                            </td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_parking_time_container %>
                                <br><%= 'Max: ' + info[i].max_parking_time_container %>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-xs-center">Docking Time (Minutes)</td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_dock_time_jumbo %>
                                <br><%= 'Max: ' + info[i].max_dock_time_jumbo %>
                            </td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_dock_time_trailer %>
                                <br><%= 'Max: ' + info[i].max_dock_time_trailer %>
                            </td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_dock_time_container %>
                                <br><%= 'Max: ' + info[i].max_dock_time_container %>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-xs-center">Leaving Time (Minutes)</td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_leaving_time_jumbo %>
                                <br><%= 'Max: ' + info[i].max_leaving_time_jumbo %>
                            </td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_leaving_time_trailer %>
                                <br><%= 'Max: ' + info[i].max_leaving_time_trailer %>
                            </td>
                            <td class="text-xs-center"><%= 'Avr: ' + info[i].average_leaving_time_container %>
                                <br><%= 'Max: ' + info[i].max_leaving_time_container %>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-xs-center">Total Time (Minutes)</td>
                            <td class="text-xs-center">Avr:
                                <h6 style=<%= info[i].average_total_time_jumbo > 3 * 60 ? 'color:red' : 'color:green' %>><%= info[i].average_total_time_jumbo %></h6>
                                Max:
                                <h6 style=<%= info[i].max_total_time_jumbo > 3 * 60 ? 'color:red' : 'color:green' %>><%= info[i].max_total_time_jumbo %></h6>
                            </td>
                            <td class="text-xs-center">Avr:
                                <h6 style=<%= info[i].average_total_time_trailer > 3 * 60 ? 'color:red' : 'color:green' %>><%= info[i].average_total_time_trailer %></h6>
                                Max:
                                <h6 style=<%= info[i].max_total_time_trailer > 3 * 60 ? 'color:red' : 'color:green' %>><%= info[i].max_total_time_trailer %></h6>
                            </td>
                            <td class="text-xs-center">Avr:
                                <h6 style=<%= info[i].average_total_time_container > 3 * 60 ? 'color:red' : 'color:green' %>><%= info[i].average_total_time_container %></h6>
                                Max:
                                <h6 style=<%= info[i].max_total_time_container > 3 * 60 ? 'color:red' : 'color:green' %>><%= info[i].max_total_time_container %></h6>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <br>
                </div>
                <br>
            </div>
        </div>
        <% } %>
    </div>
</div>
<% include ../partials/footer.ejs %>
<script type="text/javascript" src="/javascripts/sorttable.js"></script>
</body>
</html>