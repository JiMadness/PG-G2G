<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.1/css/font-awesome.min.css" rel="stylesheet"
          type="text/css">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
</head>

<body>
<div class="section">
    <% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h4 class="display-4 pi-draggable pi-item">Edit User: <%= info.name %></h4>
            <hr class="divider"/>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="./edit">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" name="username" class="form-control" readonly
                               value=<%= info.username %>>
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" class="form-control" value=<%= info.name %>>
                    </div>
                    <div class="form-group">
                        <label>T-Number</label>
                        <input type="text" name="tnumber" class="form-control" value=<%= info.T_number %>>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>
</div>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/js/bootstrap.js"></script>


</body>

</html>